#include <iostream>
#include <map>
#include <vector>
using namespace std;

class Solution {
public:
	static bool isPalindrome(int x) {
		vector<int> Arr;
		if (x < 0){
			cout << "false" << endl;
		}
		else
		{
			while (x){
				int temp = x % 10;
				Arr.push_back(temp);
				x = x / 10;
			}
			/*for (int i = 0; i < Arr.size(); ++i){
				cout << Arr[i] << endl;
			}*/
			int i = 0;
			int temp = Arr.size() / 2;
			while (temp){
				if (Arr[i] != Arr[Arr.size() - i - 1]){
					cout << "false" << endl;
					break;
				}
				else{
					++i;
					--temp;
					if (temp == 0){
						cout << "true" << endl;
					}
				}
			}
			return true;
		}
	}
};

int main(){
	int statistics = 10701;
	Solution::isPalindrome(statistics);
	system("pause");
	return 0;
}



